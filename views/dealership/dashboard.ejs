});

async function loadRecentVehicles() {
    try {
        const response = await fetch('/dealership/api/recent-vehicles');
        const vehicles = await response.json();
        
        const container = document.getElementById('recentVehicles');
        
        if (vehicles.length === 0) {
            container.innerHTML = `
                <div class="empty-state">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
                        <polyline points="14 2 14 8 20 8"/>
                    </svg>
                    <p>No verified vehicles yet</p>
                    <a href="/dealership/add-vehicle" class="primary-button">Add Your First Vehicle</a>
                </div>
            `;
            return;
        }
        
        container.innerHTML = vehicles.map(vehicle => `
            <div class="vehicle-item">
                <div class="vehicle-image">
                    <img src="https://img.freepik.com/premium-vector/green-certified-isolated-rubber-stamp-sticker-seal-with-stars-tick-icon-vector-illustration_723710-1553.jpg?semt=ais_hybrid&w=740&q=80" alt="${vehicle.make} ${vehicle.model}" onerror="this.src='/images/vehicle-default.jpg'">
                </div>
                <div class="vehicle-info">
                    <div class="vehicle-name">${vehicle.year} ${vehicle.make} ${vehicle.model}</div>
                    <div class="vehicle-details">
                        <span class="vehicle-vin">VIN: ${vehicle.vin}</span>
                        <span class="vehicle-price">R${parseInt(vehicle.price).toLocaleString()}</span>
                    </div>
                </div>
                <div class="vehicle-status verified">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                        <polyline points="22 4 12 14.01 9 11.01"/>
                    </svg>
                    Verified
                </div>
            </div>
        `).join('');
        
    } catch (error) {
        console.error('Error loading recent vehicles:', error);
        document.getElementById('recentVehicles').innerHTML = `
            <div class="error-state">
                Error loading vehicles. Please try again.
            </div>
        `;
    }
}

async function loadVerificationAnalytics() {
    try {
        const response = await fetch('/dealership/api/verification-analytics');
        const analytics = await response.json();
        
        // Process data for chart
        const chartData = processAnalyticsData(analytics);
        renderVerificationChart(chartData);
        
    } catch (error) {
        console.error('Error loading analytics:', error);
    }
}

function processAnalyticsData(analytics) {
    // Group by month and status
    const months = [...new Set(analytics.map(a => a.month))].sort();
    const statuses = ['verified', 'pending_verification', 'rejected'];
    
    const datasets = statuses.map(status => {
        const data = months.map(month => {
            const record = analytics.find(a => a.month === month && a.status === status);
            return record ? record.count : 0;
        });
        
        return {
            label: formatStatusLabel(status),
            data: data,
            backgroundColor: getStatusColor(status),
            borderColor: getStatusColor(status),
            borderWidth: 1
        };
    });
    
    return {
        labels: months.map(month => {
            const date = new Date(month + '-01');
            return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
        }),
        datasets: datasets
    };
}

function formatStatusLabel(status) {
    const labels = {
        'verified': 'Verified',
        'pending_verification': 'Pending',
        'rejected': 'Rejected'
    };
    return labels[status] || status;
}

function getStatusColor(status) {
    const colors = {
        'verified': '#10b981', // Green
        'pending_verification': '#f59e0b', // Amber
        'rejected': '#ef4444' // Red
    };
    return colors[status] || '#6b7280';
}

function renderVerificationChart(data) {
    const ctx = document.getElementById('verificationChart').getContext('2d');
    
    new Chart(ctx, {
        type: 'bar',
        data: data,
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Month'
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Number of Vehicles'
                    },
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            },
            plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: 'Vehicle Verification Status Over Time'
                }
            }
        }
    });
}

function initTabs() {
    const tabTriggers = document.querySelectorAll('.tab-trigger');
    const tabContents = document.querySelectorAll('.tab-content');
    
    tabTriggers.forEach(trigger => {
        trigger.addEventListener('click', () => {
            const tabId = trigger.getAttribute('data-tab');
            
            // Update active tab
            tabTriggers.forEach(t => t.classList.remove('active'));
            trigger.classList.add('active');
            
            // Show active content
            tabContents.forEach(content => {
                content.classList.remove('active');
                if (content.id === tabId) {
                    content.classList.add('active');
                }
            });
        });
    });
}
